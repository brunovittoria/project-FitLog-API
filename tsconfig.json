{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  }
}
